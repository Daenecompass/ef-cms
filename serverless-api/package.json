{
  "name": "serverless-api",
  "description": "US Tax Court Serverless APIs",
  "version": "0.1.0",
  "devDependencies": {
    "artillery": "^1.6.0-24",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-security": "^1.4.0",
    "prettier": "^1.14.3",
    "serverless": "^1.32.0",
    "serverless-aws-documentation": "^1.1.0",
    "serverless-dynamodb-local": "^0.2.35",
    "serverless-offline": "^3.27.0",
    "serverless-plugin-split-stacks": "^1.6.0",
    "spawn-sync": "^2.0.0",
    "try-thread-sleep": "^2.0.0"
  },
  "scripts": {
    "install:dynamodb": "./node_modules/.bin/sls dynamodb install",
    "install:lambda": "docker pull lambci/lambda",
    "lint": "eslint ./src",
    "start:dynamodb": "./node_modules/.bin/sls dynamodb start -p 8000  --migrate true --stage local",
    "start:local": "./node_modules/.bin/sls offline start --port 3000 -r us-east-1 --noTimeout --stage local",
    "start": "sls offline start",
    "watch": "nodemon -e yml --exec sls offline start"
  }
}
